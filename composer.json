{
    "name": "martinkkh/laravel-tuya-api",
    "description": "Tuya Api with laravel framework",
    "keywords": [
        "givenergy",
        "laravel-tuya-api"
    ],
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Martin Kong",
            "email": "martin.kong@givenergy.co.uk",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "guzzlehttp/guzzle": "^7.3",
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.21",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Givenergy\\LaravelTuyaApi\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Givenergy\\LaravelTuyaApi\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "post-autoload-dump": [
            "@php ./vendor/bin/testbench package:discover --ansi"
        ]

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Givenergy\\LaravelTuyaApi\\LaravelTuyaApiServiceProvider"
            ],
            "aliases": {
                "LaravelTuyaApi": "Givenergy\\LaravelTuyaApi\\LaravelTuyaApiFacade"
            }
        }
    }
}
